<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_baseline_wb_cloudy_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/city_name"
        tools:text="@tools:sample/cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon_image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/eight_dp"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:textSize="@dimen/city_size"/>

    <TextView
        android:id="@+id/city_temperature"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eight_dp"
        android:textSize="@dimen/city_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_name"
        tools:text="18" />

    <TextView
        tools:text="Â°C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/city_name"
        app:layout_constraintStart_toEndOf="@id/city_temperature"
        android:layout_marginTop="@dimen/eight_dp"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:textSize="@dimen/city_size"/>

    <TextView
        android:id="@+id/city_condition"
        tools:text="@string/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/city_temperature"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/TextAppearance.MaterialComponents.Button"/>

    <TextView
        android:id="@+id/city_feels_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_condition"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:textSize="@dimen/ten_dp"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:text="@string/feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/city_humidity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_feels_like"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/six_dp"
        android:textSize="@dimen/ten_dp"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:text="@string/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/city_season"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_humidity"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/six_dp"
        android:textSize="@dimen/ten_dp"
        style="@style/TextAppearance.MaterialComponents.Overline"
        android:text="@string/spring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>